{
  "name": "faircopy",
  "version": "0.2.1",
  "description": "(The first of many) small sharp tools for digital scholarship in the humanities",
  "main": "public/electron.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "predist": "yarn build",
    "dist": "electron-builder -mw",
    "build": "react-scripts build",
    "start": "electron public/electron.js",
    "start-dev": "BROWSER=none react-scripts start",
    "test": "react-scripts test"
  },
  "repository": "https://github.com/performant-software/faircopy",
  "keywords": [
    "Electron",
    "TEI",
    "Editor",
    "Digital Humanities"
  ],
  "author": "Performant Software Solutions LLC",
  "homepage": ".",
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "prop-types": "^15.7.2",
    "prosemirror-example-setup": "^1.0.1",
    "prosemirror-model": "^1.7.0",
    "prosemirror-schema-basic": "^1.0.1",
    "prosemirror-schema-list": "^1.0.3",
    "prosemirror-state": "^1.2.3",
    "prosemirror-transform": "^1.1.3",
    "prosemirror-view": "^1.9.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-scripts": "3.0.1",
    "redux": "^4.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "com.performantsoftware.faircopy",
    "productName": "FairCopy",
    "copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "postinstall": "electron-builder install-app-deps",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
