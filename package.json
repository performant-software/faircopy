{
  "name": "faircopy",
  "version": "0.6.2",
  "description": "A word processor for the humanities scholar.",
  "main": "public/electron.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "predist": "yarn build",
    "predist-mac": "yarn build",
    "predist-win": "yarn build",
    "dist-mac": "electron-builder -m",
    "dist-win": "electron-builder -w",
    "dist": "electron-builder -mw",
    "build": "react-scripts build",
    "start": "BROWSER=none PORT=4000 react-scripts start",
    "test": "react-scripts test"
  },
  "repository": "https://github.com/performant-software/faircopy",
  "keywords": [
    "TEI",
    "Editor",
    "Digital Humanities"
  ],
  "author": "Performant Software Solutions LLC",
  "homepage": ".",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron": "^8.1.0",
    "electron-builder": "^22.3.6",
    "electron-notarize": "^1.0.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.53",
    "axios": "^0.19.2",
    "debounce": "^1.2.0",
    "electron-log": "^4.2.3",
    "electron-updater": "^4.3.4",
    "jszip": "^3.4.0",
    "openseadragon": "^2.4.2",
    "prop-types": "^15.7.2",
    "prosemirror-dropcursor": "^1.3.2",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-gapcursor": "^1.1.2",
    "prosemirror-history": "^1.1.2",
    "prosemirror-keymap": "^1.1.3",
    "prosemirror-model": "^1.8.2",
    "prosemirror-schema-basic": "^1.1.2",
    "prosemirror-schema-list": "^1.1.2",
    "prosemirror-state": "^1.3.2",
    "prosemirror-transform": "^1.2.3",
    "prosemirror-view": "^1.13.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-force-graph-2d": "^1.13.6",
    "react-scripts": "3.4.1",
    "react-split-pane": "^0.1.89",
    "uuid": "^8.1.0",
    "xml-formatter": "^2.1.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "com.performantsoftware.faircopy",
    "productName": "FairCopy",
    "copyright": "Copyright Â© 2020 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "build/icon.png",
      "hardenedRuntime": true, 
      "gatekeeperAssess": false,
      "entitlements": "scripts/entitlements.mac.plist",
      "entitlementsInherit": "scripts/entitlements.mac.plist",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "license": "LICENSE",
      "createDesktopShortcut": false
    },
    "afterSign": "scripts/notarize.js"   
  },
  "postinstall": "electron-builder install-app-deps",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
